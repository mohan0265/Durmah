{
  "name": "durmah-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run -w apps/widget dev",
    "dev:widget": "npm run -w apps/widget dev",
    "build": "npm run -w apps/widget build",
    "build:widget": "npm run -w apps/widget build",
    "preview": "npm run -w apps/widget preview",
    "typecheck": "npm run -w apps/widget typecheck",
    "clean": "rimraf \"**/node_modules\" \"**/.turbo\" \"**/.next\" \"**/dist\""
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "@fastify/aws-lambda": "^6.0.0",
    "@fastify/cors": "^8.5.0",
    "fastify": "^4.29.1"
  }
}
